<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Variable Height Cells"
    Width="800"
    Height="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  示例：第一列  -->
        <Rectangle
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Fill="LightBlue" />
        <Rectangle
            Grid.Row="3"
            Grid.RowSpan="3"
            Grid.Column="0"
            Fill="LightGreen" />
        <Rectangle
            Grid.Row="6"
            Grid.RowSpan="3"
            Grid.Column="0"
            Fill="LightPink" />

        <!--  示例：第二列  -->
        <Rectangle
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="1"
            Fill="LightBlue" />
        <Rectangle
            Grid.Row="1"
            Grid.RowSpan="4"
            Fill="LightGreen" Margin="98,2,2,47" Grid.ColumnSpan="2" />
        <Rectangle
            Grid.Row="4"
            Grid.RowSpan="5"
            Grid.Column="1"
            Fill="LightPink" />

        <!--  可继续添加其他列的单元格  -->
    </Grid>
</Window>